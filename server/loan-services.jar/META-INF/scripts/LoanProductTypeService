import com.rameses.annotations.*;
import com.rameses.invoker.client.*;
import com.rameses.util.*;


class LoanProductTypeService
{
	@PersistenceContext('java:loan')
	def em;


	@ProxyMethod
	public def getList() {
		return em.sqlContext.createQuery('select * from loan_product_type').resultList?.each {
			if( it.extended ) it.putAll( em.serializer.read( it.remove('extended') ));
		};
	}

	@ProxyMethod
	public def create( prod_type ) {
		return em.create('loan_product_type', prod_type);
	}

	@ProxyMethod
	public def update( prod_type ) {
		return em.update('loan_product_type', prod_type);
	}

	@ProxyMethod
	public void delete( prod_type ) {
		em.delete('loan_product_type', prod_type);
	}

}
