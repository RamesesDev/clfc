<?xml version="1.0" encoding="UTF-8"?>
<project name="mlglobal-services-deployer" basedir=".">
    
    <target name="deploy-loan-services">
        <antcall target="zz-do-deploy">
            <param name="service" value="loan-services.jar" />
        </antcall>        
    </target>    
 
    
    <target name="zz-do-deploy">
        <property name="src" value="D:\Rameses\Projects\NBProjects\CLFC\loan\dist"/>
        <property name="dest" value="D:\Rameses\test_clfc_platform\modules"/>
        
        <echo message="deploying ${modules} to ${dest}" />
        <!--
        <delete dir="${dest}/${service}" verbose="true"/>
        -->
        <copy todir="${dest}/${modules}" overwrite="true" verbose="true">
            <fileset dir="${src}/${modules}">
                <modified update="false" />
            </fileset>
        </copy>
    </target>
    
</project>
